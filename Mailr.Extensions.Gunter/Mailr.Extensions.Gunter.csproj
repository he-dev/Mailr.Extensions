    <EmbeddedResource Update="src\Views\RunTest\Modules\Greeting.cshtml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Update="src\Views\RunTest\Modules\Level.cshtml">
