  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2018.2.1" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.1.3" />
    <PackageReference Include="Reusable.AspNetCore.Http.SemanticLogger" Version="7.0.22" />
    <PackageReference Include="Reusable.Core" Version="7.0.22" />
