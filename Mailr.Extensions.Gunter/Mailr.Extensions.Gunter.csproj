    </EmbeddedResource>
    <EmbeddedResource Update="src\Views\RunTest\Result.cshtml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Update="wwwroot\css\RunTest\Result.css">
